<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".FaltuApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FALTU">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity -->
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="false"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait" />

        <!-- DateGPT Activity -->
        <activity
            android:name=".ui.dategpt.DateGPTActivity"
            android:exported="false"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait" />

        <!-- LazyLegend Activity -->
        <activity
            android:name=".ui.lazylegend.LazyLegendActivity"
            android:exported="false"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait" />

        <!-- Stats Activity -->
        <activity
            android:name=".ui.stats.StatsActivity"
            android:exported="false"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait" />

        <!-- Missions Activity -->
        <activity
            android:name=".ui.missions.MissionsActivity"
            android:exported="false"
            android:theme="@style/Theme.FALTU"
            android:screenOrientation="portrait" />

    </application>

</manifest>